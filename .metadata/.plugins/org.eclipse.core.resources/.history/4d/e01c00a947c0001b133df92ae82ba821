package day0529.ifswitch;

import java.util.Scanner;

public class Quiz06 {public static void main(String[] args) {
	
	/*
	 * 전자제춤 대리점
	 * 
	 * 물건값에 따른 할인을 진행하고 있음
	 * 
	 * 물건값 :10만이하   30만원이하     30만원초과 
	 * 할인율 :3퍼할인    5퍼할인         8퍼할인
	 * 
	 * 출력형식
	 * 
	 * 물건값(만원) : 10
	 * 계산값 : 97000
	 * 
	 */
	Scanner sc = new Scanner(System.in);
	
	System.out.print("물건값 : ");
	int num = sc.nextInt();
	
	if ( num <= 10) {
		System.out.println("계산값 : " + (num*10000-(num*10000*0.03)) +"원 입니다." );
	} else if (num <=30) {
		System.out.println("계산값 : " +(num*10000-(num*10000*0.05))+"원 입니다.");
	} else {
		System.out.println("계산값 : "+ (num*10000-(num*10000*0.08))+"원 입니다.");
	}
}

}
