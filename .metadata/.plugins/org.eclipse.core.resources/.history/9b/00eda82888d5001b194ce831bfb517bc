package polymorphism.game;

public class Archer {
	private int hp;
	private int mp;
	private int atk;
	private int def;
	private int lv;
	private int exp;

	public Archer() {
		this.hp = 20;
		this.mp = 10;
		this.atk = 4;
		this.def = 1;
		this.lv = 1;
		this.exp = 0;
	}

	public void hunt(Monster M) {

		if (M.getHp() <= 0) {
			System.out.println("시체는 사냥감으로 좋지 않지..");
			return;
		}

		if (this.hp <= 0) {
			System.out.println("사냥꾼과 사냥감은 바뀌기 마련...");
			System.out.println("다음 생엔 사냥감을 고르는 눈을 기르기 바라지");
			System.out.println("[[사망]]");
			return;
		}
		System.out.println("사냥의 시간이 돌아왔다..");
		System.out.println(M.id+"를 발견했다!!");
		
		M.dobattle(this.atk);
		
		if (M.getAtk() > (this.hp + this.def)) {
			System.out.println("유저가 사망했습니다.");
			return;
		}
		if (M.getHp() <= 0) {
			System.out.println("경험치를 20 획득했습니다.");
			this.exp += 20;
		}
		this.hp = (this.hp + this.def) - M.getAtk();
		System.out.println("오크와의 교전 완료!");
		
		

		
		
		
		

		
		
		
		
		
		
		
	}

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getLv() {
		return lv;
	}

	public void setLv(int lv) {
		this.lv = lv;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}

}
