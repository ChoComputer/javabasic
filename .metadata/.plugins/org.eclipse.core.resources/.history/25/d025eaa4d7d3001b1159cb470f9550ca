package accessmodifier.game;

public class Commoner {
	
	private int hp;
	private int level;
	private int mp;
	private int exp;
	private String id;
	
	public Commoner (String id) {
		this.hp=20;
		this.mp=10;
		this.level=1;
		this.exp=0;
		this.id=id;
	}
	
	
	
	public void hunt() {
		hp-=(int) (Math.random() * 6);;
		exp+=10;
		if(hp>0) {
			System.out.println("사냥의 시간이 돌아왔다.");
		System.out.println("사냥 결과 체력은 "+hp+"가 되었고");
		System.out.println("누적 경험치는 "+exp+"가 되었습니다.");
		System.out.println("-----------------------------");
	}else if(hp<=0) {
		System.out.println("You die");
	}
	} 
	
	

}
