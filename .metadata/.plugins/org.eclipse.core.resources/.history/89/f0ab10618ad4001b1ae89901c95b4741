package accessmodifier.game;

import inheritance.game.Commoner;

public class ProtectedArchor extends ProtectedCommoner {

//	public ProtectedArchor(String id) {
//
//		this.hp = 30;
//		this.mp = 25;
//		this.level = 5;
//		this.exp = 0;
//	}
	public void getAllData() {
		System.out.println("궁수 상태창");
		super.getAllData();
	}
	
	public void hunt() {
		System.out.println("궁수가 사냥터을 시작합니다.");
		super.hunt();
	}

	public void multiShot() {
		if (mp - 2 > 0) {
			System.out.println("아쳐가 멀티샷을 사용합니다.");
			mp -= 2;
			exp += 15;
		} else {
			System.out.println("마나가 부족하여 스킬이 취소됩니다.");
		}
	}

}
