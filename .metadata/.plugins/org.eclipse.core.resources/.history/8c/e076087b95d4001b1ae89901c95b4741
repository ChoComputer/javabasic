package accessmodifier.game;

public class Paladin extends ProtectedCommoner {

	public void HolyAttack() {
		if(getMp()>0) {
			setHp(getHp()+3);
			setMp(getMp()-5);
			setExp(getExp()+13);
			System.out.println("======================");
			System.out.println("성직자의 [[HolyAttack]]");
			System.out.println("=======================");
		}else {
			System.out.println("마나가 부족하여 스킬이 취소되었습니다.");
		}
	}
		public void Heal(){
		if(getMp()>0) {
			setHp(getHp()+3);
			setMp(getMp()-5);
			setExp(getExp()+13);
			System.out.println("======================");
			System.out.println("성직자의 [[HolyAttack]]");
			System.out.println("=======================");
		}else {
			System.out.println("마나가 부족하여 스킬이 취소되었습니다.");
		}
		}
		
		
	}


